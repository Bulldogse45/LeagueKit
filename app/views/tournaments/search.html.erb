<h2 class="text-center"> Search for Tournament </h2>
<div class="container">
    <%= form_tag tournament_search_results_path, :method => 'get' do %>
      <div class="col-xs-6 col-xs-offset-3">
        <%= text_field_tag :search, params[:search] %>
      </div>
      <div class="col-xs-6 col-xs-offset-3">
        <%= submit_tag "Search Teams by Name", :name => nil, class:"btn-primary btn btn-search" %>
      </div>
    <% end %>
</div>
