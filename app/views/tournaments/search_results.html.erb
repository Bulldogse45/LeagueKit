<div class="container-fluid  body-container">
  <div class="row">
    <div class="col-lg-12">
        <h4>Tournaments</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-hover tournament-table">
                <thead>
                    <tr>
                        <th>Tournament</th>
                        <th>Director</th>
                        <th>Start Time</th>
                        <th>Message Director</th>
                    </tr>
                </thead>
                <tbody>
                  <% @tournaments.each do |t| %>
                    <tr>
                        <td>
                          <%= link_to t do %>
                            <% if t.tournament_logo %>
                              <%= image_tag attachment_url(t, :tournament_logo), class:"img-responsive thumbnail-logo pull-left" %> <%= t.name %>
                            <% else %>
                              <%= t.name %>
                            <% end %>
                          <% end %>
                        </td>
                        <td><%= link_to t.user.full_name, t.user %></td>
                        <td><%= t.start_time.strftime('%a %b %e, %l:%M %P ') %></td>
                        <td><%= link_to "Message #{t.user.first_name}", new_message_path(user_id:t.user.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
