<div class="container-fluid  body-container">
  <% @leagues.each do |l| %>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-university fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= l.announces.count %></div>

                    </div>
                </div>
                <div class="row"><h4 class="text-center"><%= l.name %></h4></div>
            </div>
            <%= link_to league_path(l) do %>
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-university"></i></span>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
    </div>
  <% end %>
  <%= link_to new_league_path do %>
  <div class="col-lg-3 col-md-6">
      <div class="panel panel-yellow">
          <div class="panel-heading">
              <div class="row">
                  <div class="col-xs-3">
                      <i class="fa fa-university fa-3x"></i>
                  </div>
                  <div class="col-xs-9 text-right">
                      <div class="huge"></div>

                  </div>
              </div>
              <div class="row"><h4 class="text-center">New League</h4></div>
          </div>
              <div class="panel-footer">
                  <span class="pull-left"></span>
                  <span class="pull-right"><i class="fa fa-university"></i></span>
                  <div class="clearfix"></div>
              </div>
      </div>
  </div>
<% end %>
</div>
