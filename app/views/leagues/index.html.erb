<div class="container-fluid  body-container">
  <h2 class="text-center"> Leagues</h2>
  <div class="title-team-row row hidden-xs">
    <div class="col-sm-3 hidden-xs">League Name</div>
    <div class="col-sm-3 hidden-xs">Director Name</div>
  </div>
  <% @leagues.each do |l| %>
    <div class="team-row row">
      <div class="col-xs-6 hidden-sm hidden-md hidden-lg">League Name</div><div class="col-sm-3 col-xs-6"><%= link_to l.name, l %></div>
      <div class="col-xs-6 hidden-sm hidden-md hidden-lg">Director Name</div><div class="col-sm-3 col-xs-6"><%= link_to "#{l.user.full_name}", l.user %></div>
    </div>
  <% end %>
</div>
