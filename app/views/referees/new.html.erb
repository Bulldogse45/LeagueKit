<div class="container-fluid  body-container">
  <div class="row">
    <h3 class="text-center"><%= @tournament.name %></h3>
  </div>
  <div class="row">
    <p class="text-center"><%= "We appreciate you volunteering for #{@tournament.name}.  It will begin on #{@tournament.start_time} and end on #{@tournament.end_time}.  Please make any notes below that we will need to know when scheduling you to referee.  For example if you will only be available certain times.  Thank you!" %></p>
  </div>
  <div class="col-lg-6 col-lg-offset-3">
    <%= bootstrap_form_for(@referee) do |f| %>
      <%= f.hidden_field :tournament_id, :value => @tournament.id %>
      <%= f.text_field :notes %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
