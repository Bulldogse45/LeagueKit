<div class="container">
  <h1>Login</h1>
  <%= form_for @user_session, :url => user_sessions_path do |f| %>
      <% @user_session.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.check_box :remember_me %><%= f.label :remember_me %>

    <%= f.submit "Login" %>
  <% end %>

</div>
