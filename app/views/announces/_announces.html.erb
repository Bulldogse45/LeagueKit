
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Recent Announcements</h3>
        </div>
        <div class="panel-body">
            <div class="list-group">
              <% @announces.each do |a| %>
                <div class="list-group-item">


                    <% if a.announcable_type == "Team" %>
                      <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                    <% elsif a.announcable_type == "Tournament" %>
                      <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                    <% elsif a.announcable_type == "League" %>
                      <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                    <% elsif a.announcable_type == "Game" %>
                      <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                    <% else %>
                      <div class="panel panel-red">
                    <% end %>

                    <%= a.content %>
                    <% unless a.read? %>
                      <%= link_to "Mark as Read", mark_announcement_as_read_path(id:a.id), class:"btn btn-primary pull-right" %>
                    <% end %>
                </div>
                <% end %>
            </div>
            <div class="text-right">
                <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
