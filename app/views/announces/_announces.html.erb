
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Recent Announcements</h3>
        </div>
        <div class="panel-body">
            <div class="list-group">
              <% @announces.each do |a| %>

                <div class="list-group-item row">
                  <div class="col-xs-12 col-sm-3">
                    <% if a.announcable_type == "Team" %>
                      <%= link_to a.announcable, class:"btn btn-primary" do %>
                        <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                      <% end %>
                    <% elsif a.announcable_type == "Tournament" %>
                      <%= link_to a.announcable, class:"btn btn-tournament" do %>
                        <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                      <% end %>
                    <% elsif a.announcable_type == "League" %>
                      <%= link_to a.announcable, class:"btn btn-league" do %>
                        <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                      <% end %>
                    <% elsif a.announcable_type == "Game" %>
                      <%= link_to a.announcable, class:"btn btn-game" do %>
                        <i class="fa fa-fw fa-calendar"></i> <%=a.announcable.name %>
                      <% end %>
                    <% else %>
                    <% end %>
                  </div>
                  <div class="col-xs-12 col-sm-6">
                    <p class="text-center"><%= simple_format(a.content) %></p>
                  </div>
                  <div class="col-xs-12 col-sm-3">
                    <% unless a.read? %>
                      <%= link_to "Mark as Read", mark_announcement_as_read_path(id:a.id), class:"pull-right" %>
                    <% end %>
                  </div>
                </div>
                <% end %>
            </div>
            <div class="text-right">
                <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
