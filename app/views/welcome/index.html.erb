<div class="row hidden-xs hidden-sm hidden-md">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-dribbble fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @game_announces.count %></div>
                        <div>Game Alerts!</div>
                    </div>
                </div>
            </div>
            <%= link_to games_path do %>
                <div class="panel-footer">
                    <span class="pull-left">Upcoming Games</span>
                    <span class="pull-right"><i class="fa fa-dribbble"></i></span>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
    </div>
